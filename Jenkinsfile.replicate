pipeline {
    agent any

    environment {
        REPLICATE_BIN = "C:\\Program Files\\Attunity\\Replicate\\bin"
        TASK_NAME = "task1"
    }

    stages {

        stage('Checkout Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Jananikarikalan98/QlikDB.git'
            }
        }

        stage('Stop Replicate Task') {
            steps {
                bat """
                cd "%REPLICATE_BIN%"
                repctl.exe stoptask task=%TASK_NAME% || echo Task already stopped
                """
            }
        }

        stage('Start Replicate Task') {
            steps {
                bat """
                cd "%REPLICATE_BIN%"
                repctl.exe starttask task=%TASK_NAME%
                """
            }
        }

        stage('Check Task Status') {
            steps {
                bat """
                cd "%REPLICATE_BIN%"
                repctl.exe listtasks
                """
            }
        }
    }

    post {
        success {
            echo "Task lifecycle automation completed successfully"
        }
        failure {
            echo "Task automation failed â€“ check Replicate logs"
        }
    }
}
